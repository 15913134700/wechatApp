page{
  background-color: #f9f9f9;
}

.title_box{
  position: relative;
  height: 440rpx;
}
.cover_bg_box{
  height: 360rpx;
  width: 100%;
  overflow: hidden;
  position: absolute;
}
.cover_bg_mask{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity:0.5;
  background-color: #000;
  z-index: -1;
}
.cover_bg{
  width: 100%;
  position: absolute;
  z-index: -2;
}

.cover{
  width: 200rpx;
  height: 280rpx;
  position: absolute;
  margin: 120rpx 0 0 30rpx;
}
.movie_title{
  position: absolute;
  margin: 160rpx 0 0 260rpx;
  color: #fff;
  font-size: 36rpx;

}
.movie_title_en{
  position: absolute;
  margin: 220rpx 0 0 260rpx;
  color: #fff;
  font-size: 24rpx;
}

.movie_rating{
  position: absolute;
  margin: 280rpx 0 0 260rpx;
  color: #fff;
  font-size: 55rpx;
}
.movie_ratings_count{
  position: absolute;
  margin: 312rpx 0 0 375rpx;
  color: #a8aaa8;
  font-size: 22rpx;
}

.msg_box{
  position: relative;
  margin: 10rpx 30rpx;
  font-size: 24rpx;
}
.button_box{
  position: relative;
  margin: 50rpx 0rpx;
  display: flex;
}

.msg_button{
  flex: 1;
  margin: 0 20rpx;
  border-color: #0099f0;
  color: #0099f0;
}
.summary_title{
  position: relative;
  margin: 10rpx 30rpx 30rpx 30rpx;
  font-size: 24rpx;
  color: #a6a6a6;
}
.comment_title{
  position: relative;
  margin: 70rpx 30rpx 30rpx 30rpx;
  font-size: 24rpx;
  color: #a6a6a6;
}

.comment_box{
  display: flex;
  margin: 0 48rpx 45rpx 28rpx;
  font-size: 24rpx; 
}

.author_avatar{
  border-radius: 50%;
  overflow: hidden;
  width: 72rpx;
  height: 72rpx;

}
.author_avatar_img{
  width: 100%;
  height: 100%;
}
.content_box{
  flex: 1;
  margin-left: 24rpx;
  padding-top: 13rpx;
}
.author_created{
  color:#9a9a9a;
}